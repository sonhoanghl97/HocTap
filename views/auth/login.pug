extends ../layout/common.pug

block content
	h1 Login

	if errors
		each error in errors
			.alert.alert-danger=error
	form(action="/auth/login", method="POST")
		.form-group
			label(for="email") Email
			input.form-control#email(type="text", name= "email", value=values? values.email : "")
		.form-group
			label(for="password") Password
			input.form-control#password(type="password", name= "password", value=values? values.password : "")
		button.btn.btn-primary Login